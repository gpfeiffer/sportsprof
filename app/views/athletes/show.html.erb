<h3>Athletes</h3>
<h2><%= @athlete.name %></h2>

<p>
  <b>Date of birth:</b>
  <%= @athlete.date_of_birth %>
</p>

<p>
  <b>Gender:</b>
  <%= @athlete.gender %>
</p>


<% if can? :edit, @athlete %>
  <%= link_to 'Edit', edit_athlete_path(@athlete) %> |
<% end %>
<% if can? :destroy, @athlete %>
  <%= link_to 'Delete', @athlete, :confirm => 'Are you sure?', :method => :delete %> |
<% end %>
<%= link_to 'Message', new_message_path(:role_id => @athlete.role) %> |
<%= link_to 'Back', athletes_path %>
